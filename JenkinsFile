pipeline {
    agent any
    
    tools {
        nodejs "node"
    }

    stages {
        stage('Build') {
            steps {
                git credentialsId: '50149f68-5226-4b9f-acb4-c0b99e149e50', url: 'https://github.com/rayenbac/PI-nest', branch: 'Produit'
                sh 'npm install'
            }
        }

       stage('SonarQube Analysis') {
    steps {
        // Configuration de l'environnement SonarQube
        withSonarQubeEnv('scanner') {
            // Installation de SonarScanner
            script {
                sh 'npm install sonar-scanner'
            }

            // Exécution de SonarScanner avec le fichier de configuration personnalisé
            script {
           def scannerConfDir = "${WORKSPACE}/sonar.properties"

                // Exécution de SonarScanner en spécifiant le chemin du fichier sonar-project.properties
                sh "sonar-scanner -Dsonar.projectBaseDir=${WORKSPACE} -Dsonar.config.file=${scannerConfDir}"
            }
        }
    }
    }
    }
}
