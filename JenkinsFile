pipeline {
    agent any
    
    tools {
        nodejs "node"
    }

    stages {
        stage('Build') {
            steps {
                git credentialsId: '50149f68-5226-4b9f-acb4-c0b99e149e50', url: 'https://github.com/rayenbac/PI-nest', branch: 'Produit'
                sh 'npm install'
            }
        }

       stage('SonarQube Analysis') {
            steps {
                // Configuration de l'environnement SonarQube
                withSonarQubeEnv('SonarQube') {
                    // Exécution de SonarScanner
                    script {
                        def scannerDir = "${WORKSPACE}/node_modules/sonar-scanner"
                        def scannerConfDir = "${scannerDir}/conf"
                        
                        // Exécution de SonarScanner en spécifiant le chemin du fichier sonar-scanner.properties
                        sh "sonar-scanner -Dsonar.projectBaseDir=${WORKSPACE} -Dsonar.config.file=${scannerConfDir}/sonar-scanner.properties"
                    }
                }
            }
        
       }
    }
}
