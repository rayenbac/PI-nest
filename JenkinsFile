pipeline {
    agent any
    
    tools {
        nodejs "node"
    }

    stages {
        stage('Build') {
            steps {
                git credentialsId: '50149f68-5226-4b9f-acb4-c0b99e149e50', url: 'https://github.com/rayenbac/PI-nest', branch: 'Produit'
                sh 'npm install'
            }
        }

        stage('SonarQube Analysis') {
    steps {
        withSonarQubeEnv('ERPAPP') {
            script {
                // Installer sonar-scanner
                sh 'npm install sonar-scanner'

                // Exécuter sonar-scanner en spécifiant le chemin vers sonar-scanner.properties
                def scannerConfDir = "${WORKSPACE}/node_modules/sonar-scanner/conf"
                sh "sonar-scanner -Dsonar.projectBaseDir=${WORKSPACE} -Dsonar.config.file=${scannerConfDir}/sonar-scanner.properties"
            }
        }
    }
}

    }
}
