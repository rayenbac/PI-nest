pipeline {
    agent any
    
    tools {
        nodejs "node"
    }
    environment {
registryCredentials = "nexus"
registry = "192.168.1.209:8083"
}

   
    stages {
        stage('Build') {
            steps {
                git branch: 'validation', credentialsId: '50149f68-5226-4b9f-acb4-c0b99e149e50', url: 'https://github.com/rayenbac/PI-nest.git'
                sh 'npm install'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Construire l'image Docker Ã  partir du Dockerfile
                    docker.build('benelbeyskander465/erpapp')
                }
            }
        }
       stage('Deploy to Nexus') {
            steps{
                 script {
                docker.withRegistry("http://"+registry,
                       registryCredentials ) {
                          sh('docker push $registry/benelbeyskander465/erpapp')
}
}
}
}

    }
}
